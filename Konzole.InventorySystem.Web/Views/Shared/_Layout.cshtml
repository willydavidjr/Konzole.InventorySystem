    <div class="modal fade" id="mdLogout" tabindex="-1" role="dialog" aria-labelledby="mdLogoutLabel" aria-hidden="true">
        <div class="modal-dialog" style="width:350px;top:250px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" id="btnCloseLogout" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="mdLogoutLabel">User Log out</h4>
                </div> <!-- /.modal-header -->

                <div class="modal-body">
                    Are you sure you want to log-out?<br />
                    <span style="font-size:9px;">Note: Currect running time will be lost.</span>
                </div> <!-- /.modal-body -->

                <div class="modal-footer">
                    @*@Html.ActionLink("Logout", "LogOff", "Account", routeValues: new { area = "" }, htmlAttributes: new { @class = "btn btn-success", @style = "width:150px;" })*@
                    <button id="btnCancel" class="form-control btn btn-danger" data-dismiss="modal" style="width:150px;">Cancel</button>
                </div> <!-- /.modal-footer -->

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
    @Scripts.Render("~/Content/js")
    @Scripts.Render("~/Content/scripts/custom/layout.js")
    @Scripts.Render("~/Content/scripts/jquery-ui.js")
    @Styles.Render("~/Content/css/jquery-ui.css")
    <script type="text/javascript">
            $("#btnToggle").click(function (e) {

                if ($("#dvMenu").is(':visible')) {
                    $(this).html('<i class="fa fa-angle-double-right fa-fw"></i>Menu');
                    $("#dvMenu").fadeOut();
                    $("#page-wrapper").animate({ "margin-left": '0' });
                }
                else {
                    $(this).html('<i class="fa fa-angle-double-left fa-fw"></i>Menu');
                    $("#page-wrapper").animate({ "margin-left": '250px' });
                    $("#dvMenu").fadeIn();
                }

            });
    </script>
</body>
<footer>

